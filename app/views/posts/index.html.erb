<div class="row">
  <div class="col inside-vh scroll-y">
    <div class="mx-4 my-5">
      <div class="post-form py-3 px-4 mb-5 bg-white">
        <div class="p-2">
          <span class="font-weight-bold text-uppercase text-muted">What's in your mind?</span>
        </div>
        <%= simple_form_for @post do |f| %>
          <div class="form-group w-100">
            <%= f.input_field :text, :as => :string, placeholder: 'Share to help your colleagues...', class: 'w-100 form-control' %>
          </div>
        <% end %>
      </div>
      <div class="post-container bg-white">
        <div class="text-uppercase font-weight-bold text-base px-4 py-3">
          new posts
        </div>
        <hr class="p-0 my-0 mx-4" />
        <div class="py-3 px-4">
          <% @posts.each do |post| %>
            <div class="d-flex w-100 py-3">
              <% if post.author.avatar.attached? %>
                <%= image_tag post.author.avatar, class: 'user-image' %>
              <% end %>
              <div class="post-info w-100 pl-2">
                <div class="d-flex w-100 justify-content-between">
                  <div class="text-capitalize font-weight-bold"><%= post.author.fullname %></div>
                  <div class="small-font text-muted"><%= time_ago_in_words(post.created_at) %></div>
                </div>
                <div class="text-muted">
                  <%= post.text %>
                </div>
                <div class="w-100 d-flex justify-content-end">
                  <%= link_to root_path, class: 'px-3 text-base text-decoration-none' do %>
                    <% if true %>
                      <span class="text-dark pr-2">1</span><i class="fas fa-heart"></i>
                    <% else %>
                      <span class="text-dark pr-2">0</span><i class="far fa-heart"></i>
                    <% end %>
                  <% end %>
                  <% if current_user == post.author %>
                    <%= link_to edit_post_path(post), class: 'px-3 text-base' do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to post_path(post), class: 'px-3 text-base', method: :delete, data: {confirm: "Are you sure?"} do %>
                      <i class="fas fa-trash-alt"></i>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="sidbar-size inside-vh scroll-y who-to-follow border-left">
    <div class="text-muted d-flex justify-content-between p-3">
      <div class="font-weight-bold text-uppercase">
        who to follow
      </div>
      <i class="fas fa-sync-alt"></i>
    </div>
    <hr class="mx-4 my-2" />
    <div class="people p-3">
      <% current_user.out_users.each do |person| %>
        <div class="person d-flex align-items-center p-2">
          <% if person.avatar.attached? %>
            <%= image_tag person.avatar, class: 'person-image rounded-circle' %>
          <% end %>
          <div class="pl-2 d-flex flex-column">
            <span class="font-weight-bold"><%= person.fullname %></span>
            <% unless person.followed_by.empty? %>
              <span class="text-muted">Followed by <span class="text-base"><%= person.followed_by[0].fullname %></span></span>
            <% else %>
              <span class="text-muted">Be the first follower</span>
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="text-base small-font">
        <a href="#" class="text-base text-decoration-none">Popular accounts</a> -
        <a href="#" class="text-base text-decoration-none">Find Friends</a>
      </div>
    </div>
  </div>
</div>